use math;

struct Point {
  x, y
}

fn distance(p1, p2) {
  val dx = math.abs(p1.x - p2.x);
  val dy = math.abs(p1.y - p2.y);
  val x = math.pow(dx, 2);
  val y = math.pow(dy, 2);
  return math.sqrt(x + y);
}

val p1 = Point { 7, 10 };
val p2 = Point { 11, 13 };
val result = distance(p1, p2);

println("the distance between p1 and p2 is: " + str(result));

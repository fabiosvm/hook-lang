use math;

struct Point {
  x, y
}

fn distance(const p1, const p2) {
  const dx = math.abs(p1.x - p2.x);
  const dy = math.abs(p1.y - p2.y);
  const x = math.pow(dx, 2);
  const y = math.pow(dy, 2);
  return math.sqrt(x + y);
}

const p1 = Point { 7, 10 };
const p2 = Point { 11, 13 };
const result = distance(p1, p2);

println("the distance between p1 and p2 is: " + str(result));
